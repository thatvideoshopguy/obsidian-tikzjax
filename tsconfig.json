{
  "compilerOptions": {
	"outDir": "./dist",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7",
      "ES2021.String"
    ],
	"paths": {
		"tikzjax": [
			"./build/tikzjax.js"
		]
	}
  },
  "include": [
    "**/*.ts",
	"**/*.js"
  ]
}
